{
  "name": "rjsf-tailwind",
  "version": "5.1.0",
  "description": "Tailwind CSS forms for react-jsonschema-form",
  "main": "dist/index.js",
  "module": "dist/rjsf-tailwind.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "npm-run-all --parallel build:watch tailwind:watch",
    "build:watch": "dts watch â€”noClean",
    "tailwind:watch": "npx tailwindcss -i ./src/index.css -o ./dist/rjsf-tailwind.css --watch",
    "build": "rimraf dist && dts build --rollupTypes --format cjs,esm,umd && npx tailwindcss -i ./src/index.css -o ./dist/rjsf-tailwind.css --minify",
    "cs-check": "prettier -l \"{src,test}/**/*.ts?(x)\"",
    "cs-format": "prettier \"{src,test}/**/*.ts?(x)\" --write",
    "lint": "eslint src test",
    "precommit": "lint-staged",
    "test": "dts test",
    "test:update": "dts test --u",
    "test:watch": "dts test --watch"
  },
  "lint-staged": {
    "{src,test}/**/*.ts?(x)": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engineStrict": false,
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "@rjsf/core": "^5.1.0",
    "@rjsf/utils": "^5.1.0",
    "react": "^18.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-modules-commonjs": "^7.20.11",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@heroicons/react": "^2.0.13",
    "@rjsf/core": "^5.1.0",
    "@rjsf/utils": "^5.1.0",
    "@rjsf/validator-ajv8": "^5.1.0",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.10",
    "@types/react-test-renderer": "^18.0.0",
    "autoprefixer": "^10.4.13",
    "classnames": "^2.3.2",
    "cssnano": "^5.1.14",
    "dts-cli": "^1.6.3",
    "eslint": "^8.33.0",
    "framer-motion": "^5.6.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "^3.2.6"
  },
  "dependencies": {
    "react-select": "^5.7.0"
  }
}
